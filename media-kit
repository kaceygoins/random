    const ExpandableSection = ({ title, children, sectionId }) => {
        const isExpanded = expandedSections[sectionId]

        return (
            <div style={styles.expandableSection}>
                <div
                    style={{
                        ...styles.expandableHeader,
                        ...(hoveredNavButton === sectionId
                            ? styles.expandableHeaderHover
                            : {}),
                    }}
                    onClick={() => toggleSection(sectionId)}
                    onMouseEnter={() => setHoveredNavButton(sectionId)}
                    onMouseLeave={() => setHoveredNavButton(null)}
                    className="expandable-header"
                >
                    <h3 style={styles.expandableTitle}>{title}</h3>
                    <div
                        style={{
                            ...styles.expandIcon,
                            ...(isExpanded ? styles.expandIconRotated : {}),
                        }}
                    >
                        ▼
                    </div>
                </div>
                <div
                    style={{
                        ...styles.expandableContent,
                        ...(isExpanded ? styles.expandableContentExpanded : {}),
                    }}
                    className={isExpanded ? "expandable-content-expanded" : ""}
                >
                    {children}
                </div>
            </div>
        )
    }

    return (
        <>
            <style>{responsiveStyles}</style>
            <div style={styles.container}>
                {/* Hero Section */}
                <section style={styles.hero} className="hero">
                    <h1 style={styles.heroTitle} className="hero-title">
                        Media <span style={styles.purpleAccent}>Kit</span>
                    </h1>
                    <p style={styles.heroSubtitle} className="hero-subtitle">
                        Official brand guidelines, logos, and assets for Glenn
                        Lundy. Everything you need to represent our brand
                        consistently and professionally.
                    </p>
                </section>

                {/* Quick Navigation */}
                <section
                    style={styles.quickNavSection}
                    className="quick-nav-section"
                >
                    <div style={styles.quickNavGrid} className="quick-nav-grid">
                        {navigationItems.map((item) => (
                            <button
                                key={item.id}
                                style={{
                                    ...styles.quickNavButton,
                                    ...(hoveredButton === item.id
                                        ? styles.quickNavButtonHover
                                        : {}),
                                    ...(item.id === "download"
                                        ? { gridColumn: "2 / 3" }
                                        : {}),
                                }}
                                onClick={() => scrollToSection(item.id)}
                                onMouseEnter={() => setHoveredButton(item.id)}
                                onMouseLeave={() => setHoveredButton(null)}
                                className="quick-nav-button"
                            >
                                {item.label}
                            </button>
                        ))}
                    </div>
                </section>

                {/* Speaker Bio Section */}
                <section
                    id="speaker-bio"
                    style={styles.section}
                    className="section"
                >
                    <h2 style={styles.sectionTitle} className="section-title">
                        Speaker <span style={styles.purpleAccent}>Bio</span>
                    </h2>

                    <ExpandableSection
                        title="Short Bio (100 Words)"
                        sectionId="short-bio"
                    >
                        <div style={styles.bioCard}>
                            <p style={styles.bioText}>
